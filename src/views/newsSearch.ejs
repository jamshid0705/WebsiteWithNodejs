<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header class="header">
    <div class="header__logo">Node.JS news</div>
    <div class="header__search">
      <form action="/" method="POST">
        <input type="text" name="search" placeholder="Search for news" required>
        <input type="submit" value="Search">
      </form>
    </div>
  </header>

  <dic class="wrapper">
    <div class="news">
      <% if(! (articles == null)){ %>
        <% articles.forEach(function(article,index){ %>
          <a href="/article/<%- article.id %>" class="news__card">
            <img src="https://cdn.pixabay.com/photo/2014/11/05/15/57/salmon-518032__340.jpg" alt="">
            <h2><%- article.title.rendered%></h2>
            <p><%- article.excerpt.rendered%></p>
          </a>
        <% }) %> 
      <% } else{ %>
        No posts found
      <% } %>  
    </div> 
  </dic>
</body>
</html>