<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header class="header">
    <div class="header__logo">Node.JS news</div>

    <div class="header__search">
      <form action="/" method="POST">
        <input type="text" name="search" placeholder="Search for news" required>
        <input type="submit" value="Search">
      </form>
    </div>
    
  </header>

 
  <div class="wrapper">
    <div class="news">
        <% if(articl != null) { %>
        <% articl.forEach(function(article, index) { %>
            <a href="/article/<%- article.id %>" class="news__card">
                <img src="https://images.unsplash.com/photo-1594998893017-36147cbcae05?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mjh8fG1lYWx8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60" alt="<%- article.title.rendered %>">
                <h2><%- article.title.rendered %></h2>
                <p><%- article.excerpt.rendered %></p>
            </a>
        <% }) %>
        <% } else { %>
            No posts found.
        <% } %>
    </div>
</div>
  
</body>
</html>